<div class="modal fade" id="teacher-editor-dialog" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Teacher</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                @if (model is not null)
                {
                    <EditForm Model="state.EditingTeacher" OnValidSubmit="SaveAsync">
                        <DataAnnotationsValidator />

                        <div class="row g-3 mb-3">
                            <div class="col-md-2">
                                <label class="form-label">Title</label>
                                <InputText @bind-Value="model.Title" class="form-control" />
                                <ValidationMessage For="() => model.Title" />
                            </div>

                            <div class="col-md-5">
                                <label class="form-label">First Name</label>
                                <InputText @bind-Value="model.FirstName" class="form-control" />
                                <ValidationMessage For="() => model.FirstName" />
                            </div>

                            <div class="col-md-5">
                                <label class="form-label">Last Name</label>
                                <InputText @bind-Value="model.LastName" class="form-control" />
                                <ValidationMessage For="() => model.LastName" />
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Date Of Birth</label>
                                <InputDate @bind-Value="model.DateOfBirth" class="form-control" />
                                <ValidationMessage For="() => model.DateOfBirth" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Hired On</label>
                                <InputDate @bind-Value="model.HiredOn" class="form-control" />
                                <ValidationMessage For="() => model.HiredOn" />
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                Cancel
                            </button>
                            <button type="submit" class="btn btn-primary">
                                Save
                            </button>
                        </div>
                    </EditForm>
                }
            </div>

        </div>
    </div>
</div>
