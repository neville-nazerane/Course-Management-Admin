<div class="modal fade" id="studyprogram-editor-dialog" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Study Program</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                @if (model is not null)
                {
                    <EditForm Model="model" OnValidSubmit="SaveAsync">
                        <DataAnnotationsValidator />

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Name</label>
                                <InputText @bind-Value="model.Name" class="form-control" />
                                <ValidationMessage For="() => model.Name" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Code</label>
                                <InputText @bind-Value="model.Code" class="form-control" />
                                <ValidationMessage For="() => model.Code" />
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-12">
                                <label class="form-label">Description</label>
                                <InputTextArea @bind-Value="model.Description" class="form-control" rows="3" />
                                <ValidationMessage For="() => model.Description" />
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button"
                                    class="btn btn-secondary"
                                    data-bs-dismiss="modal">
                                Cancel
                            </button>
                            <button type="submit" class="btn btn-primary">
                                Save
                            </button>
                        </div>
                    </EditForm>
                }
            </div>

        </div>
    </div>
</div>
